module rules/core/Constraints

imports

  common/Identifiers
  terms/Terms
  
context-free syntax

  Constraint.Ref =
    <<Name> -\> <Scope>>
  
  Constraint.Dec =
    <<Name> \<- <Scope>>
  
  Constraint.Res =
    <<Name> |-\> <Name>>
  
  Constraint.Par =
    <<ScopeRef> -P-\> <ScopeRef>>
  
  Constraint.TypeOf =
    <<Term> : <Type>>
  
  Constraint.Eval =
    <<Term> ' <Scope> : <Type>>
  